{
    "private": true,
    "scripts": {
        "dev": "npm run development && npm run development-css",
        "development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "development-css": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --env.mixfile=webpack.css.mix.js --config=node_modules/laravel-mix/setup/webpack.config.js",
        "watch": "npm run development -- --watch & npm run development-css -- --watch",
        "watch-poll": "npm run development -- --watch --watch-poll & npm run development-css -- --watch --watch-poll",
        "prod": "npm run production && npm run production-css",
        "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "production-css": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --env.mixfile=webpack.css.mix.js --config=node_modules/laravel-mix/setup/webpack.config.js",
        "test": "cross-env NODE_ENV=test mochapack --webpack-config=node_modules/laravel-mix/setup/webpack.config.js --require tests/Frontend/setup.js \"resources/js/**/*.vue\" \"tests/Frontend/**/*.spec.js\"",
        "lint": "./node_modules/.bin/eslint --ext .js,.vue .",
        "cover": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text npm run test",
        "ci": "npm run lint && npm run cover"
    },
    "devDependencies": {
        "@intlify/eslint-plugin-vue-i18n": "^0.4.1",
        "@vue/test-utils": "^1.0.3",
        "axios": "^0.19.2",
        "babel-plugin-istanbul": "^6.0.0",
        "babel-plugin-rewire": "^1.2.0",
        "bootstrap": "^4.5.0",
        "browser-sync": "^2.26.12",
        "browser-sync-webpack-plugin": "^2.0.1",
        "cross-env": "^7.0",
        "eslint": "^7.3.1",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-mocha": "^7.0.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "eslint-plugin-vue": "^6.2.2",
        "expect": "^26.1.0",
        "glob": "^7.1.6",
        "jquery": "^3.2",
        "jsdom": "^16.2.2",
        "jsdom-global": "^3.0.2",
        "laravel-mix": "^5.0.1",
        "lodash": "^4.17.19",
        "mocha": "^7.2.0",
        "mochapack": "^2.0.2",
        "moxios": "^0.4.0",
        "nyc": "^15.1.0",
        "popper.js": "^1.12",
        "resolve-url-loader": "^2.3.1",
        "sass": "^1.20.1",
        "sass-loader": "^8.0.0",
        "vue": "^2.5.17",
        "vue-template-compiler": "^2.6.10"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.13.0",
        "@simonwep/pickr": "^1.5.1",
        "@smartweb/vue-flash-message": "^0.6.4",
        "bootstrap-select": "^1.13.16",
        "bootstrap-vue": "^2.15.0",
        "es6-promise": "^4.2.8",
        "laravel-mix-merge-manifest": "^0.1.2",
        "moment": "^2.27.0",
        "vue-i18n": "^8.18.2",
        "vue-router": "^3.2.0",
        "vuex": "^3.4.0"
    },
    "engines": {
        "node": "^10.12.0 || >=12.0.0"
    },
    "nyc": {
        "include": [
            "resources/js/**/*.{js,vue}"
        ],
        "extension": [
            ".js",
            ".vue"
        ],
        "exclude": [
            "resources/js/lang/**/*.js"
        ],
        "instrument": true,
        "sourceMap": false,
        "all": true
    }
}
