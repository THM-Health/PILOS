#!/usr/bin/env bash

function changePermissions() {
    echo "Changing permissions"
    chown -R :www-data /var/www/html/storage/
    chown -R :www-data /var/www/html/resources/custom
    chown -R :www-data /var/www/html/resources/sass/theme/custom
    find /var/www/html/storage/ -type f -exec chmod 664 {} \;
    find /var/www/html/storage/ -type d -exec chmod 775 {} \;
    find /var/www/html/resources/custom/ -type f -exec chmod 664 {} \;
    find /var/www/html/resources/custom/ -type d -exec chmod 775 {} \;
    find /var/www/html/resources/sass/theme/custom/ -type f -exec chmod 664 {} \;
    find /var/www/html/resources/sass/theme/custom/ -type d -exec chmod 775 {} \;
}

function buildFrontend() {
    echo "Building frontend"
	su-exec www-data /usr/local/etc/frontend/run.sh
}

function migrateDatabase() {
    echo "Migrating database and seed with example data"

    while ! su-exec www-data php artisan db:check; do
        echo "Waiting before trying again..."
        sleep 5
    done
    su-exec www-data php artisan migrate --force --seed
}

function linkStorage() {
    su-exec www-data php artisan storage:link
}

function enableSSL() {
    echo "Checking SSL files"
    if [ -e /local/certs/fullchain.pem -a -e /local/certs/privkey.pem ]; then
        echo "Files found, enabling SSL"
        ln -s /etc/nginx/snippets-available/ssl /etc/nginx/snippets/ssl
    else
        echo "Files not found, skipping SSL"
    fi
}

function optimize() {
    su-exec www-data composer dump-autoload -o
    su-exec www-data php artisan config:cache
    su-exec www-data php artisan route:cache
    su-exec www-data php artisan view:cache
    su-exec www-data php artisan locales:cache
}

function setNginxLimits() {
    NPROC=$(nproc)
    ULIMIT=$(ulimit -Hn)

    NO_FILE_LIMIT=$(($ULIMIT))

    # Available file descriptors divided by 2 (files descriptors per connection, send/receive during proxying)
    WORKER_CONNECTIONS=$(($ULIMIT / 2))
    
    echo "Dectected $NPROC cores and a limit of $ULIMIT files, setting worker_connections to $WORKER_CONNECTIONS and worker_rlimit_nofile to $NO_FILE_LIMIT";

    sed -i "s/worker_connections.*/worker_connections $WORKER_CONNECTIONS;/" /etc/nginx/nginx.conf
    sed -i "s/worker_rlimit_nofile.*/worker_rlimit_nofile $NO_FILE_LIMIT;/" /etc/nginx/nginx.conf
}

function enableOPCacheTimestamps() {
    echo "Enabling opcache timestamps"
    sed -i 's/opcache.validate_timestamps=.*/opcache.validate_timestamps=1/' /usr/local/etc/php/conf.d/opcache.ini
}

if [ "$ENABLE_XDEBUG" == "yes" ]; then
    echo "Enabling xdebug"
    docker-php-ext-enable xdebug
fi

if [ $# -gt 0 ]; then
    exec su-exec www-data "$@"
else
    if [ "$APP_ENV" == "production" ]; then
        changePermissions
        buildFrontend
        migrateDatabase
        linkStorage
        optimize
        setNginxLimits
    else
        enableSSL
        enableOPCacheTimestamps
    fi

    exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi
